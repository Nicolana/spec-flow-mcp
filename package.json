{
  "name": "spec-flow-mcp",
  "version": "1.0.2",
  "description": "AI Infra 开发规范治理工具 - MCP 服务",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "spec-flow-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "preferGlobal": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run test/integration",
    "test:unit": "vitest run test/utils test/core --exclude test/integration",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "postbuild": "chmod +x dist/index.js",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:prerelease": "npm version prerelease",
    "publish:patch": "npm run version:patch && npm run publish:release",
    "publish:minor": "npm run version:minor && npm run publish:release",
    "publish:major": "npm run version:major && npm run publish:release",
    "publish:prerelease": "npm run version:prerelease && npm run publish:release",
    "publish:release": "npm run test:run && npm run build && npm publish",
    "publish:beta": "npm run version:prerelease && npm run test:run && npm run build && npm publish --tag beta",
    "publish:alpha": "npm run version:prerelease && npm run test:run && npm run build && npm publish --tag alpha",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "development-specs",
    "ai-infra",
    "code-governance",
    "development-standards",
    "node",
    "typescript",
    "cursor",
    "ai-assistant"
  ],
  "author": "Nicolana <nicolanazwj@gmail.com>",
  "license": "MIT",
  "homepage": "https://www.flowspec.online/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/specflow-ai/spec-flow-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/specflow-ai/spec-flow-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
